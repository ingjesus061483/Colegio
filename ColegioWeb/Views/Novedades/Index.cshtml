@model IEnumerable<Factory.Novedad>

@{
    ViewBag.Title = "Listado de novedades";
    int? matricula = ViewBag.natricula;
}

<h2>@ViewBag.Title</h2>

 @if (matricula!= null)
 {
<p>
    @Html.ActionLink("Crear novedad", "Create")|
    @Html.ActionLink("Inprimir ", "print")
</p>
 }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoNovedad.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoNovedad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>              
                @Html.ActionLink("Ver detalles ", "Details", new { id = item.Id }) 
                
            </td>
        </tr>
    }

</table>
