@model Factory.Novedad

@{
    ViewBag.Title = "Crear novedad";
    SelectList tiponovedad = ViewBag.tiponovedad;
    SelectList estadomatricula = ViewBag.estadoMatricula;
    int matricula = ViewBag.matricula;
}
<div class="card">
    <div class="header">@ViewBag.Title </div>
    <div class="body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Hidden("matricula", matricula)
                <div class="form-group">
                    @Html.Label("estado matricula", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("estadomatricula", estadomatricula, "Seleccione", new { @class = "form-control", @style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.TipoNovedad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoNovedad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.TipoNovedad, tiponovedad, "Seleccione", new { @class = "form-control", @style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.TipoNovedad, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="button" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<div style=" padding-top:20px">
    @Html.ActionLink("Listado De novedades", "Index",null,htmlAttributes:new { @class="button"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
