@model IEnumerable<Factory.Curso>

@{
    SelectList categorias = ViewBag.Categorias;
    ViewBag.Title = "Listado e cursos";
}
<h2>@ViewBag.Title</h2>
<form id="frm" class="validate-form">
    <div class="row">
        <div class="col-md-3 mb-3">
            @Html.Label("Categorias")
            @Html.DropDownList("categoria", categorias ,"seleccione", new { @class = "form-control", @style = "width:100%;" })
        </div>
        <div class="col mb-3">
            <label class="w-100">&nbsp;</label>
            <button type="submit" class="btn btn-primary" id="btnSearch"><i class="fa fa-search"></i> Buscar</button>
        </div>
    </div>
</form>

<p>
    @Html.ActionLink("Crear curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Duracion)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Tiempo.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.CantidadEstudiantesMatriculados)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.ValorTotal)
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Duracion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tiempo.Nombre)
    </td>
    <td>
        @Html.DisplayFor(moelItem => item .CantidadEstudiantesMatriculados)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ValorTotal)
    </td>

    <td>
        @Html.ActionLink("Ver detalles", "Details", new { id = item.Id }) |

    </td>
</tr>
    }
</table>
